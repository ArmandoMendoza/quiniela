<h1>Listing registers</h1>
<table class="table">
  <thead>
    <tr>
      <th>NickName</th>
      <th>Nombres</th>
      <th>Email</th>
      <th>Telefono</th>
      <% if current_user.admin? %>
        <th colspan="3">Acciones</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @registers.each do |register| %>
      <tr>
        <td><%= register.nickname %></td>
        <td><%= register.name %></td>
        <td><%= register.email %></td>
        <td><%= register.phone %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Destroy', [@pool, register], method: :delete,
            data: { confirm: 'Estas seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "volver", pools_path %>