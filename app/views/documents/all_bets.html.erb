<%= index_panel("Todas las Apuestas - #{@pool.name}") do %>
  <% @users.each do |user| %>
    <div>
      Jugador: <%= user.full_name %> <br>
      Fecha: <%= Time.now.strftime("%d-%m-%Y  %H:%M") %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Grupo</th>
          <th>Juego</th>
          <th>Fecha</th>
          <th>Hora</th>
          <th>Resultado</th>
          <th>Apuesta</th>
          <th>Puntos</th>
        </tr>
      </thead>
      <tbody>
        <% Bet.of_user_in_pool(user, @pool).order(['matches.group_id', 'bets.pos']).each do |bet| %>
        <% bet.match.get_teams %>
          <tr>
            <td><%= bet.id %></td>
            <td><%= bet.match.group.name %></td>
            <td><%= bet.match.to_s %></td>
            <td><%= bet.match.date.strftime('%d-%m') %></td>
            <td><%= bet.match.hour %></td>
            <td><%= bet.match.score_to_s %></td>
            <td><%= bet.to_s %></td>
            <td><%= bet.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>