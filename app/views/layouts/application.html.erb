<!DOCTYPE html>
<html>
  <head>
    <title>Quiniela</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'modernizr' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render "shared/navbar" if user_signed_in? %>
      <% if notice %>
        <div class="alert alert-success"><b><%= notice %></b></div>
      <% end %>
      <div class="row">
        <div class="col-md-12">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
