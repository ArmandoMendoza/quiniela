<%= simple_form_for(@elimination_match) do |f| %>
  <%= f.error_notification %>
  <%= f.input :date, as: :string, input_html:{ class: 'datepicker'} %>
  <%= f.input :hour %>
  <%= f.input :stadium %>
  <%= f.input :match_number %>
  <%= f.input :local_team_id, collection: Team.all, label_method: :name, value_method: :id,
    input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Equipo"}  } %>
  <%= f.input :visitor_team_id, collection: Team.all, label_method: :name, value_method: :id,
    input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Equipo"}  } %>
  <%= f.input :local %>
  <%= f.input :visitor %>
  <%= f.input :round, collection: EliminationMatch::ROUNDS,
    input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Ronda"} } %>
  <%= f.input :match_to_winner, collection: EliminationMatch.all, label_method: :to_s,
    value_method: :id, input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Partido"}  } %>
  <%= f.input :match_to_loser, collection: EliminationMatch.all, label_method: :to_s,
    value_method: :id, input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Partido"}  } %>
  <%= f.input :select, collection: ["local", "visitor"] %>
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to "Volver", elimination_matches_path, class: "btn btn-default" %>
<% end %>
