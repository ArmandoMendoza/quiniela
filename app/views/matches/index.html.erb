<h1>Listing matches</h1>
<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Juego</th>
      <th>Estadio</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date.strftime('%d-%m-%Y') %></td>
        <td><%= match.to_s %></td>
        <td><%= match.stadium %></td>
        <td><%= link_to 'Scores', match_scores_path(match) %></td>
        <td><%= link_to 'Show', match %></td>
        <% if can? :edit, match %>
          <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <% end %>
        <% if can? :destroy, match %>
          <td><%= link_to 'Destroy', match, method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Match %>
  <%= link_to 'New Match', new_match_path %>
<% end %>