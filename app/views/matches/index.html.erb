
<% if can? :create, Match %>
  <%= link_to 'Nuevo Partido', new_match_path %>
<% end %>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading panel-dark" >Listado de Partidos</div>

  <!-- Table -->
  <table class="table sorted" id="matches-table">
    <thead>
      <tr>
        <th data-sort="int"><%= link_to "#", "#" %></th>
        <th data-sort="string"><%= link_to "Grupo", "#" %></th>
        <th data-sort="date"><%= link_to "Fecha", "#" %></th>
        <th>Hora</th>
        <th>Juego</th>
        <th>Estadio</th>
        <th>Resultado</th>
        <% if current_user.admin? %>
          <th colspan="3">Acciones</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.match_number %></td>
          <td><%= match.group.name %></td>
          <td><%= match.date.strftime('%d-%m-%Y') %></td>
          <td><%= match.hour %></td>
          <td><%= match.to_s %></td>
          <td><%= match.stadium %></td>
          <td><%= match.final_score.to_s %></td>
          <% if current_user.admin? %>
            <td><%= link_to 'Scores', match_scores_path(match) %></td>
            <td><%= link_to 'Edit', edit_match_path(match) %></td>
            <td><%= link_to 'Destroy', match, method: :delete,
              data: { confirm: 'Estas seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

