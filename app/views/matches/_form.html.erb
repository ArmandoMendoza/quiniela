<%= simple_form_for(@match) do |f| %>
  <%= f.error_notification %>
  <%= f.input :date, as: :string, input_html:{ class: 'datepicker'} %>
  <%= f.input :hour, input_html: { class: 'timepicker' } %>
  <%= f.input :stadium %>
  <%= f.input :match_number %>
  <%= f.input :group_id, collection: @groups, label_method: :name, value_method: :id,
    input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Grupo"}  } %>

  <%= f.input :local_team_id, collection: @groups, as: :grouped_select, group_method: :teams,
    group_label_method: :name, label_method: :name, value_method: :id,
    input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Equipo"}  } %>
  <%= f.input :visitor_team_id, collection: @groups, as: :grouped_select, group_method: :teams,
    group_label_method: :name, label_method: :name, value_method: :id,
    input_html: { class: 'chosen-select', data: { placeholder: "Seleccione Equipo"}  } %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
