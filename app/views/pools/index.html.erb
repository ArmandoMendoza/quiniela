<h1>Quinelas</h1>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Limite</th>
      <th>Completada</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @pools.each do |pool| %>
      <tr>
        <td><%= pool.name %></td>
        <td><%= pool.end_date %></td>
        <td><%= pool.completed %></td>
        <% if can? :read, pool %>
          <td><%= link_to 'Show', pool %></td>
        <% end %>
        <% if can? :edit, pool %>
          <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
        <% end %>
        <% if can? :destroy, pool %>
          <td><%= link_to 'Destroy', pool, method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, User %>
  <%= link_to 'New User', new_pool_path %>
<% end %>
