<%= form_panel(@pool.name.upcase) do %>
  <%= link_to "Realizar Apuestas", bets_pool_path(@pool), class: "btn btn-default" %>
  <%= link_to "Ver Resultados", results_pool_path(@pool), class: "btn btn-default" %>
  <div class="btn-group">
  <%= my_bets_button %>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to "archivo PDF", documents_my_bets_path(@pool, format: :pdf), target: "_blank" %>
      </li>
      <li>
        <%= link_to "vista HTML", documents_my_bets_path(@pool), target: "_blank" %>
      </li>
    </ul>
  </div>
  <%= link_to "Ver Todas las Apuestas" , documents_all_bets_path(@pool), class: "btn btn-default",
    target: "_blank" %>
<% end %>
