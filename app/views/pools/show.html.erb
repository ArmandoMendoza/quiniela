<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="container-widgets">
      <div class="group-links-widget">
        <% @groups.each do |group| %>
          <%= link_to group.name, "#", class: "group-link btn btn-widget btn-sm #{apply_colors}", data: { id: group.id } %>
        <% end %>
      </div>

      <% @groups.each do |group| %>
        <%= render partial: "group_bets", locals: { group: group, bets: @bets.of_group(group) } %>
      <% end %>
    </div>
  </div>
</div>
