<%= div_for_elimination_match(eb.elimination_match) do %>
  <div class="info-elimination-bet">
    <%= truncate(eb.to_s, length: 18) %><br>
    <%= "#{eb.elimination_match.date.strftime('%d-%m-%Y')}  #{eb.elimination_match.hour}" %>
  </div>
  <%= form_for eb, remote: true do |f| %>
    <%= f.hidden_field :local_name, value: eb.elimination_match.local_name,
      id: "local-name"  %>
    <%= f.hidden_field :visitor_name, value: eb.elimination_match.visitor_name,
      id: "visitor-name" %>
    <ul class="flag-result pull-left">
      <% if eb.find_local_team %>
        <li class="local-flag" data-class="local">
          <%= flag(eb.find_local_team)%>
        </li>
      <% else %>
        <li class="local-flag" data-class="local">
          <%= flag(eb.elimination_match.local_team)%>
        </li>
      <% end %>
      <li><%= f.text_field :local, id: "local-score" %></li>
    </ul>
    <ul class="flag-result pull-right">
      <% if eb.find_visitor_team %>
        <li class="visitor-flag" data-class="visitor">
          <%= flag(eb.find_visitor_team)%>
        </li>
      <% else %>
        <li class="visitor-flag" data-class="visitor">
          <%= flag(eb.elimination_match.visitor_team)%>
        </li>
      <% end %>
      <li><%= f.text_field :visitor, id: "visitor-score" %></li>
    </ul>
    <div class="clearfix" style="margin-bottom: 5px"></div>
    <div class="submit-button">
      <%= link_to "Enviar", "#", class: "btn btn-default btn-xs link-prueba" %>
    </div>
  <% end %>
<% end %>
<% unless eb.elimination_match.round == "Final" || eb.elimination_match.round == "Otro" %>
  <div class="triangle-down center-block"></div>
<% end %>