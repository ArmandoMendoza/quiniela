<h1>Listing users</h1>
<table class="table">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Telefono</th>
      <th>Email</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <% if can? :read, user %>
          <td><%= link_to 'Show', user %></td>
        <% end %>
        <% if can? :edit, user %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <% if can? :destroy, user %>
          <td><%= link_to 'Destroy', user, method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, User %>
  <%= link_to 'New User', new_user_path %>
<% end %>