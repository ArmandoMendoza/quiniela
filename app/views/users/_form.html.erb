<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, disabled: current_user.regular?, hint: 'No puedes cambiar tu nombre.' %>
  <%= f.input :last_name, disabled: current_user.regular?, hint: 'No puedes cambiar tu apellido.' %>
  <%= f.input :nickname, disabled: current_user.regular?, hint: 'No puedes cambiar tu nickname.' %>
  <%= f.input :phone, disabled: current_user.regular?, hint: 'No puedes cambiar tu telefono.' %>
  <%= f.input :email, disabled: current_user.regular?, hint: 'No puedes cambiar tu email.' %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <% if current_user.admin? %>
    <%= f.input :role, collection: ["admin", "regular"], input_html: { class: "chosen-select" } %>
  <% end %>
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to "Volver", users_path, class: "btn btn-default" %>
<% end %>
