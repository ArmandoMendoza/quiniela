<div class="col-md-4 col-md-offset-4">
  <div class="login-form">
    <div class="text">Inicio</div>
    <% if alert %>
      <p class="text-danger center"><b><%= alert %></b></p>
    <% end %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true, label: false,
          placeholder: "Correo Electronico" %>
      </div>
      <div class="form-group">
        <%= f.input :password, required: false, label: false,
          placeholder: "Password" %>
      </div>
        <%# f.input :remember_me, as: :boolean, label: false if devise_mapping.rememberable? %>
      <div style="text-align: center">
        <%= link_to "Volver", root_path, class: "btn btn-default" %>
        <%= f.button :submit, "Entrar", id: 'login', class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>