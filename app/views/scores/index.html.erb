<h1>Listing scores</h1>
<table class="table">
  <thead>
    <tr>
      <th>Periodo</th>
      <th><%= @match.local.name %></th>
      <th><%= @match.visitor.name %></th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.match_time %></td>
        <td><%= score.local %></td>
        <td><%= score.visitor %></td>
        <td><%= link_to 'Edit', [:edit, @match, score] %></td>
        <td><%= link_to 'Destroy', [@match, score], method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Score', new_match_score_path(@match) %>
<%= link_to 'Partidos', matches_path %>

